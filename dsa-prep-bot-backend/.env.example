# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/dsa-prep-bot
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dsa-prep-bot

# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_application_client_id_here
GUILD_ID=your_discord_server_guild_id_here
DAILY_CHALLENGE_CHANNEL_ID=your_channel_id_here
HINTS_CHANNEL_ID=your_hints_channel_id_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000

# Security (for future JWT implementation)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=30d

# External APIs (optional)
LEETCODE_API_KEY=your_leetcode_api_key_if_available

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting (requests per minute)
RATE_LIMIT=100

# File Upload (if needed)
MAX_FILE_SIZE=10mb

# Email Configuration (for future notifications)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@dsaprepbot.com

# Redis Configuration (for caching, optional)
REDIS_URL=redis://localhost:6379

# Admin Configuration
ADMIN_DISCORD_ID=your_discord_id_here

# Bot Configuration
DEFAULT_DAILY_CHALLENGE_TIME=10:00
TIMEZONE=America/New_York

# Database Backup (optional)
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h

# Analytics (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Performance Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# Development Tools
DEBUG=false
VERBOSE_LOGGING=false